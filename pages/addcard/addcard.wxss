/* pages/addcard/addcard.wxss */
.header{
  height:40px;
  line-height: 40px;
  font-size: 14px;
  text-align: center;
  background: #761cf1;
  color:#fff;
}
.gou{
  text-align: center;
}
.list-msg{
  background-color:#fff;
  position:relative;
  width:100%;
}
.select_box {
  padding: 0;
  width: 95%;
  position: absolute;
  top: 90rpx;
  z-index: 999;
  overflow: hidden;
  animation: myfirst 0.5s;
  text-align: center;
  border: 1px solid #ccc;
}

@keyframes myfirst{
from {
  height: 0rpx;
}
to{
    height: 300rpx;
  }
}
.select_one {
  height: 70rpx;
  line-height: 70rpx;
  border-bottom: 1px solid #ccc;
  background: #fff;
  font-size:13px;
}
.select_one:last-child {
  border-bottom: none;
}
.addcards{
  width: 100%;
  height: 40px;
  line-height: 40px;
  font-size: 13px;
  background: #fff;
  border-bottom: 1px solid #Ccc;
  padding:0 10px;
}
.addcard_a{
  float: left;
}
.addcard_b{
  height:40px;
  margin-left:17%;
}
.tj{
  width: 90%;
  height: 40px;
  line-height: 40px;
  text-align: center;
  font-size: 12px;
  color: #fff;
  background: #761cf1;
  border-radius: 5px;
  margin-top:25px;
  outline: none;
  border:none;
}
